---
import Layout from "@layouts/Layout.astro";
import HeroBgWrapper from "@components/helpers/HeroBgWrapper.astro";
---

<Layout>

  <main>
 
  <HeroBgWrapper imagePath="about.webp" class="full-bleed padding">
    <header class="container">
      <p>About</p>
      <h1>Creative Services For Boost Your Business Growth</h1>
    </header>
  </HeroBgWrapper>

    </main>


</Layout>

<style>
    
    header{
 
    display: grid;
    inline-size: clamp(340px, 65vw, 960px);  
    padding: 2rem 2.5rem;
    border-radius: 1.8125rem;            
    background: rgba(255,255,255,.85);
    backdrop-filter: blur(5.5px);
    color: var(--bg-black);
    }

</style>