---
import Pattern from "@icons/Pattern.svg";
import Phone from "@icons/phone.svg";
import Clock from "@icons/clock.svg";
import Pin from "@icons/pin.svg";

import Img1 from "@data/images/contact-1.webp";      
import Img2 from "@data/images/contact-2.webp";     
import Img3 from "@data/images/contact-3.webp"; 
---

<section class="container">
    <div class="container2">
        <div class="text-container">
        <p class="undertitel">Process</p>
        <h2>Contact Us. It’s Easy.</h2>
        <p>Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>

        <div class="contact-container">
            <ul>
        <li>
          <span class="icon icon-phone"><Phone /></span>
          <div>
            <p class="label">Call Today</p>
            <h4 class="value">+1 800 100 900</h4>
          </div>
        </li>

        <li>
          <span class="icon icon-clock"><Clock /></span>
          <div>
            <p class="label">Monday To Friday</p>
            <h4 class="value">9AM – 5PM</h4>
          </div>
        </li>

        <li>
          <span class="icon icon-pin"><Pin /></span>
          <div>
            <p class="label">USA Office</p>
            <h4 class="value">195 Devonshire St Boston, MA<br/>02110</h4>
          </div>
        </li>
      </ul>
        </div>
    </div>
    <div class="collage">
        <div class="green-box"></div>
        <img src={Img1.src} alt="" class="img1" loading="lazy" />
        <img src={Img2.src} alt="" class="img2" loading="lazy" />
        <img src={Img3.src} alt="" class="img3" loading="lazy" />
        <Pattern class="pattern" />
    </div>



    </div>

</section>

<style>
    section{
        padding-block: clamp(3rem, 6vw, 5rem); 

        .container2{
        /* display: inline-flex;
            align-items: flex-start;
            gap: 4.3125rem; */

            display: grid;
            grid-template-columns: auto 1fr;
            gap: 4.3125rem;
        .text-container{
            display: flex;
            width: 25.4375rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 0.375rem;

            ul{
               display: flex;
                flex-direction: column;
                align-items: flex-start;
                gap: 3.5rem;
               
                margin: 0;
                margin-block-start: 2.38rem;
                padding: 0;
               
                li{
                    text-decoration: none;
                    list-style: none;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    gap: 1rem;

                     .icon{
                    inline-size: 3.27075rem;
                    block-size: 3.27075rem;
                    border-radius: 50%;
                    display: grid;
                    place-items: center;
                    }
                   
                    .icon-phone { 
                    background: color-mix(in srgb, var(--yellow) 25%, transparent); 
                    color: var(--yellow);
                    }
                    .icon-clock { 
                    background: color-mix(in srgb, var(--green) 22%, transparent); 
                    color: var(--green);
                    }
                    .icon-pin { 
                    background: color-mix(in srgb, var(--bg-black) 10%, transparent);
                    color: var(--bg-black);
                    }
                }
            }
        }
        .collage{
            display: grid;
            grid-template-columns: 1fr 1fr; 
            gap: 1rem;
            align-items: start;
            position: relative;

            img{
                border-radius: 20px;
            }

            .img1{
                grid-column: 1/2;
                grid-row: 1/3;
                justify-self: end;
            }
            .img2{
                grid-column: 2/3;
            }
            .img3{
                grid-column: 2/3;
                grid-row: 2/3;
            }
            .pattern{
                grid-column: 2/3;
                grid-row: 1/2;
                position: absolute;
                z-index: -1;
                aspect-ratio: 1/1;
                /* right: -6%;
                top: -10%; */
                inset-inline-end: 0;                 /* helt ud til containerens højrekant */
                top: clamp(-40px, -6vw, -16px);      /* samme “løft” som i figma */
                inline-size: clamp(140px, 24vw, 260px);
            }
            .green-box{
                grid-column: 1/2;
                grid-row: 2/3;
                position:absolute;
                z-index: -1;
                width: clamp(110px, 22%, 180px);
                aspect-ratio: 9/16;
                background: var(--green);
                border-radius: 1.25rem;
                transform: rotate(90deg);

                 right: 55%;
                top: 50%;
            }
        }
    }

    }
</style>
