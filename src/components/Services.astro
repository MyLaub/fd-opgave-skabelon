---

<ul class="cards container">
  {
    servicesData.services.map((service) => (
      <li class="card">
        <h3>{service.title}</h3>
        <p>{service.description}</p>
        <a href="#0">{service.buttonText}</a>
      </li>
    ))
  }
</ul>

<style>
  @layer components {

    .cards{
    list-style: none;
    --gap: 1rlh;
    display: grid;
    gap: 1rlh;
    grid-row: 2 / span 2;

    margin-inline: auto;
    padding: var(--gap);

    .card {
    background: var(--bg-card);
    background: ;
    color: var(--white);
    padding: 2.875rem;
    

    backdrop-filter: blur(16px);
    border-radius: 1.25rem;

    p{
      color: var(--white);
    }
  
  }

    a{
      text-decoration: none;
      list-style: none;
      color: var(--white);
      border-radius: 3.4375rem;
      background: var(--bg-black);
      padding: 1rem 1.9375rem;
      width: fit-content;
      margin-top: 2.25rem;

      display: inline-flex;    
      align-items: center;
      white-space: nowrap; 
    }

   @media (width > 600px) {
    grid-template-columns: repeat(3, 1fr);
     grid-template-columns: repeat(3, minmax(0, 1fr));
    }

    
    }
  
  }
