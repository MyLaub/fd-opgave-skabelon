---
import { Image } from "astro:assets";
import Pattern from "@icons/Pattern.svg";
import CEO from "@assets/images/ceo.png"; 
---

<section class="hero full-bleed">
  <div class="hero-grid container">
    <div class="text-container">
      <h1>Empowering Your Business Growth</h1>
      <p>
        Discover tailored strategies and expert insights to take your business
        to the next level. Let us help you navigate challenges and achieve
        sustainable success.
      </p>
      <a class="btn" href="#0">Book a Meeting</a>
    </div>

    <Image class="hero-img bleed-right" src={CEO} alt="CEO" />
  </div>
</section>

<style>

  section{
    background-color: var(--bg-black);
    color: var(--white);
    /* padding-block: clamp(3rem, 6vw, 5rem);  */

    .hero-grid{ 
      display: grid; 
      grid-template-columns: 1fr 1fr;
    
      .text-container{
        grid-column: 1;
        max-width: 56ch;
      
      max-width: 50ch;
      justify-content: center;

      p{
        color: var(--white);
      }
      }
      .hero-img{
        grid-column: 2 / -1;      
        /* justify-self: stretch;
        align-self: stretch;        */
        object-fit: cover;    
       
      }
    }


    
  }
</style>


