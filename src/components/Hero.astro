<section class="hero full-bleed">
  <div class="hero-grid container">
    <!-- <Pattern class="hero-pattern" /> -->
    <div class="hero-text">
      <h1>Empowering Your Business Growth</h1>
      <p>
        Discover tailored strategies and expert insights to take your business
        to the next level. Let us help you navigate challenges and achieve
        sustainable success.
      </p>
      <a class="btn" href="#0">Book a Meeting</a>
    </div>

    <!-- Billedet skal bløde ud til højre -->
    <Image class="hero-img bleed-right" src={CEOImage} alt="CEO" />
  </div>
</section>


<style>
  /* Styles her */
  .full-bleed{
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: 1fr minmax(0, 1200px) 1fr;
  }
  .container{ grid-column: 2; }
  
  .bleed-right {
    grid-column: 2 / -1;
  }
  
  .bleed-left {
    grid-column: 1 / 2;
  }
  @layer components {

   section{
  background: var(--bg-black);
  color: var(--white);
  padding-block: clamp(2rem, 6vw, 4rem);
  
  .hero-grid{
    display: grid;
    grid-template-columns: 1fr  1fr; 
    align-items: end;
    
    .hero-text{
      grid-column: 1;
      position: relative;
      max-width: 50ch;
    }

      .hero-img {
        justify-self: end;
        inline-size: 100%;
        max-inline-size: none;
        object-fit: cover;
      }

      .btn{
        display:inline-block;
        margin-top: 1rem;
        padding: .85rem 1.25rem;
        border-radius: 999px;
        background: var(--white);
        color: var(--bg-black);
        text-decoration: none;
      }
  }
} }


</style>
