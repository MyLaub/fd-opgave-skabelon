---
import ArrowRight from "@icons/arrow--right.svg";
import ArrowLeft from "@icons/arrow-left.svg";

import ScrollingContainer from "./scrollingContainer.astro";

const { cardContent } = Astro.props;
---



<section class="full-bleed">
  <div class="header container">
    <div class="text-container">
      <h2>Financial projections</h2>
      <p>Financial projections are essential for planning and monitoring a company’s performance. They provide insights into potential revenue, expenses, and profitability over specific periods.</p>
    </div>

    <div class="arrows">
      <button class="arrow arrow-left"  aria-label="Forrige"><ArrowLeft /></button>
      <button class="arrow arrow-right" aria-label="Næste"><ArrowRight /></button>
    </div>
  </div>

  <div class="carousel ">
    <ScrollingContainer />
  </div>
</section>


<style>

.full-bleed {
  grid-column: 1 / -1;               
  display: grid;                      
  grid-template-columns: 1fr minmax(0, 1200px) 1fr;
}

.container {
  grid-column: 2;
}

.bleed-right {
  grid-column: 2 / -1;
}

  section {
  background-color: var(--bg-grey);
  padding-block: clamp(3rem, 6vw, 5rem); /* luft top/bund */

  .header {
    display: flex;
    justify-content: space-between; /* i stedet for manuel gap */
    align-items: flex-end;
    gap: 2rem;
    margin-bottom: 2.5rem; /* lidt afstand ned til cards */

    .text-container {
      max-width: 56ch;

      /* h2 {
        font-size: clamp(1.8rem, 3vw, 2.25rem);
        line-height: 1.2;
        font-weight: 700;
        color: var(--text-black);
        text-transform: capitalize;
        margin: 0 0 0.75rem;
      }

      p {
        color: var(--text-muted);
        line-height: 1.6;
        margin: 0;
      } */
    }

    /* Pilene */
    .arrows {
      display: flex;
      align-items: center;
      gap: 1.25rem;

      button {
        display: grid;
        place-items: center;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        border: none;
        cursor: pointer;
        transition: opacity 0.2s ease;
      }

      .arrow-left {
        background-color: var(--bg-black);
        color: var(--white);
      }

      .arrow-right {
        background-color: var(--yellow);
        color: var(--bg-black);
      }

      button:hover {
        opacity: 0.85;
      }
    }
  }

  /* Carousel wrapper spacing */
  .carousel {
    grid-column: 2 / -1;
  }
}






</style>